<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.MainMenuPageController"
            prefHeight="600"
            prefWidth="750">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="MTGhost"/>
            <Button fx:id="createTournamentButton" text="New Tournament" prefWidth="300"/>
            <Button fx:id="loadTournamentButton" text="Load Tournament" prefWidth="300"/>
            <Button fx:id="viewTeamsButton" text="View Teams" prefWidth="300"/>
            <Button fx:id="endGameButton" text="Back" prefWidth="300"/>
        </VBox>
    </center>
</BorderPane>